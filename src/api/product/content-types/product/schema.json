{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "condition": {
      "type": "enumeration",
      "enum": [
        "New",
        "Used"
      ],
      "required": true
    },
    "image": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": true,
      "required": true
    },
    "price": {
      "type": "float",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "description",
      "required": true
    }
  }
}
